  <!--=============== Emperor ====================-->

  <ThingDef ParentName="ResourceBase">
    <thingClass>Corruption.Worship.ItemEffigy</thingClass>
    <defName>Effigy_Emperor</defName>
    <label>Effigy of the Emperor</label>
    <description>A small item of worship in the shape of the emperor of mankind. May sooth the mind.</description>
    <graphicData>
      <texPath>Things/Effigies/Effigy_Emperor</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <stackLimit>1</stackLimit>
    <statBases>
      <MaxHitPoints>70</MaxHitPoints>
      <MarketValue>21</MarketValue>
      <Flammability>1.0</Flammability>
      <Mass>0.35</Mass>
    </statBases>
    <intricate>true</intricate>
    <thingCategories>
      <li>Manufactured</li>
      <li>WorshipItems</li>
    </thingCategories>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <comps>
      <li Class="Corruption.Core.Items.CompProperties_Empyreal">
        <compClass>Corruption.Core.Items.CompEmpyreal</compClass>        
        <GainRate>-10.0</GainRate>
      </li>
      <li Class="Corruption.Worship.CompProperties_Effigy">
        <compClass>Corruption.Worship.CompEffigy</compClass>
        <dedicatedTo>Emperor</dedicatedTo>
      </li>
    </comps>
    <costStuffCount>50</costStuffCount>    
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Artistic</workSkill>
      <unfinishedThingDef>UnfinishedSculpture</unfinishedThingDef>
      <effectWorking>Sculpt</effectWorking>
      <soundWorking>Recipe_Sculpt</soundWorking>
      <recipeUsers>
        <li>TableSculpting</li>
      </recipeUsers>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
        <disallowedThingDefs>
          <li>Gold</li>
          <li>Silver</li>
          <li>Plasteel</li>
          <li>Jade</li>
          <li>Uranium</li>
        </disallowedThingDefs>
      </defaultIngredientFilter>
    </recipeMaker>
  </ThingDef>

