<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <TaleDef>
    <defName>TraitProgressionTale</defName>
    <taleClass>Corruption.Worship.Tale_TraitProgression</taleClass>
    <type>PermanentHistorical</type>
    <rulePack>
      <rulesStrings>
        <li>tale_noun->[PAWN_nameDef]'s calling</li>
        <li>image->[PAWN_nameFull] looking to the heavens [circumstance_group]</li>
        <li>image->[PAWN_nameFull] falling to [PAWN_possessive] knees [circumstance_group]</li>
        <li>image->[PAWN_nameFull] on [PAWN_possessive] knees, basked in light [circumstance_group]</li>
        <li>circumstance_phrase->while looking in awe</li>
        <li>circumstance_phrase->while looking fearful</li>
        <li>circumstance_phrase->as others look on</li>
        <li>desc_sentence->[PAWN_pronoun] seems totally unaware of what is around [PAWN_objective].</li>
        <li>desc_sentence->[PAWN_possessive] body itself seems to be glowing.</li>
        <li>desc_sentence->[PAWN_pronoun] is nearly unconscious, [PAWN_possessive] tongue lolling out, drool dripping.</li>
        <li>desc_sentence->[PAWN_pronoun] seems to be crying in relief.</li>
        <li>desc_sentence->[PAWN_pronoun] is surrounded by an artistically rendered halo.</li>
      </rulesStrings>
    </rulePack>
  </TaleDef>
  
  <TaleDef>
