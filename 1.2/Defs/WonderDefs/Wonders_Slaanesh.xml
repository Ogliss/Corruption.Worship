<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <Corruption.Worship.Wonders.WonderDef Abstract="True" Name="SlaaneshWonder">
    <associatedGods>
      <li>Slaanesh</li>
    </associatedGods>
  </Corruption.Worship.Wonders.WonderDef>

  <Corruption.Worship.Wonders.WonderDef  ParentName="SlaaneshWonder">
    <defName>SlaaneshOrgy</defName>
    <label>Orgy</label>
    <description>Start an orgy in your colony to please the Prince of pleasures.</description>
    <workerClass>Corruption.Worship.Wonders.WonderWorker_FireIncident</workerClass>
    <wonderIconPath>UI/Wonders/WondersSlaaneshOrgy</wonderIconPath>
    <favourCost>0</favourCost>
    <incident>SlaaneshOrgy</incident>
    <fixedIncidentPoints>0</fixedIncidentPoints>
  </Corruption.Worship.Wonders.WonderDef>

  <Corruption.Worship.Wonders.WonderDef  ParentName="SlaaneshWonder">
    <defName>SlaaneshHigh</defName>
    <label>Gift of Pleasure</label>
    <description>Gift all your colonists a high of Slaanesh, enhancing their abilities.</description>
    <workerClass>Corruption.Worship.Wonders.WonderWorker_AddHediffMap</workerClass>
    <wonderIconPath>UI/Wonders/WondersSlaaneshHigh</wonderIconPath>
    <favourCost>1500</favourCost>
    <hediffsToAdd>
      <li>SlaaneshHigh</li>
    </hediffsToAdd>
  </Corruption.Worship.Wonders.WonderDef>

  <Corruption.Worship.Wonders.WonderDef ParentName="SlaaneshWonder">
    <defName>SlaaneshRaisePassion</defName>
    <label>Raise Passion</label>
    <description>Raise a hidden passion in one of your pawns.</description>
    <workerClass>Corruption.Worship.Wonders.WonderWorker_RaisePassion</workerClass>
    <wonderIconPath>UI/Wonders/WondersSlaaneshPassion</wonderIconPath>
    <favourCost>2500</favourCost>
  </Corruption.Worship.Wonders.WonderDef>

  <Corruption.Worship.Wonders.WonderDef ParentName="SlaaneshWonder">
    <defName>SlaaneshSeductiveChoir</defName>
    <label>Seductive Choir</label>
    <description>A sirens song flows over the planet, drawing in nearby humans to help you.</description>
    <workerClass>Corruption.Worship.Wonders.WonderWorker_FireIncident</workerClass>
    <wonderIconPath>UI/Wonders/WondersSlaaneshChoir</wonderIconPath>
    <favourCost>4000</favourCost>
    <incident>RaidFriendly</incident>
    <fixedIncidentPoints>1000</fixedIncidentPoints>
    <pointsScalable>True</pointsScalable>
    <pointsCurve>
      <points>
        <li>(1000,0)</li>
        <li>(4000,1000)</li>
        <li>(5000,1200)</li>
        <li>(20000,2000)</li>
      </points>
    </pointsCurve>
  </Corruption.Worship.Wonders.WonderDef>

  <Corruption.Worship.Wonders.WonderDef ParentName="SlaaneshWonder">
    <defName>SlaaneshCacaphonyOfDestruction</defName>
    <label>Cacaphony of Destruction</label>
    <description>An empyreal symphony is unleashed at the targeted location, destroying everything in its wake.</description>
    <workerClass>Corruption.Worship.Wonders.WonderWorker_SpawnThing</workerClass>
    <wonderIconPath>UI/Wonders/WondersSlaaneshCacaphony</wonderIconPath>
    <favourCost>6000</favourCost>
    <thingsToSpawn>
        <CacaphonyOfDestruction>1</CacaphonyOfDestruction>
    </thingsToSpawn>
  </Corruption.Worship.Wonders.WonderDef>
  
  <Corruption.Worship.Wonders.WonderDef ParentName="SlaaneshWonder">
    <defName>SlaaneshTurnChampion</defName>
    <label>Champion of Slaanesh</label>
    <description>The selected pawn was chosen by Slaanesh to be an idol of lust and perfection.</description>
    <workerClass>Corruption.Worship.Wonders.WonderWorker_AddSpecialTrait</workerClass>
    <wonderIconPath>UI/Wonders/WonderChampionSlaanesh</wonderIconPath>
    <favourCost>10000</favourCost>
    <traitToGive>SlaaneshChampion</traitToGive>
  </Corruption.Worship.Wonders.WonderDef>


</Defs>