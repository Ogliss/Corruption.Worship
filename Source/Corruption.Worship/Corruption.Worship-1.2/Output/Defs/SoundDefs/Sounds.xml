  <SoundDef>
    <defName>BellRingA</defName>
    <context>MapOnly</context>
    <maxSimultaneous>5</maxSimultaneous>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>Buildings/bell_2</clipPath>
          </li>
        </grains>
        <volumeRange>17</volumeRange>
        <distRange>20~50</distRange>
      </li>
    </subSounds>
  </SoundDef>

  <SoundDef>
    <defName>BellRingSustainer</defName>
    <sustain>True</sustain>
    <context>MapOnly</context>
    <maxVoices>3</maxVoices>
    <priorityMode>PrioritizeNearest</priorityMode>
    <sustainFadeoutTime>2</sustainFadeoutTime>
    <subSounds>
      <li>
        <muteWhenPaused>True</muteWhenPaused>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>Buildings/bell_2</clipPath>
          </li>
        </grains>
        <volumeRange>100~120</volumeRange>
        <pitchRange>0.9541177~1.137647</pitchRange>
        <distRange>10~50</distRange>
        <sustainLoop>False</sustainLoop>
        <sustainIntervalRange>0.04705882~0.08941177</sustainIntervalRange>
      </li>
    </subSounds>
  </SoundDef>

